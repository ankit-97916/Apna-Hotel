<% layout('/layouts/boilerplate') %>

<div class="row mt-2">
    <div class="col-6 offset-3">
      <h2>SignUp on Apna Hotel</h2>

      <form
        method="post"
        action="/signup"
        class="needs-validation"
        novalidate 
      >
        <div class="mb-1">
          <label for="username" class="form-label">Username :</label>
          <input
            name="username"
            type="text"
            class="form-control"
            id="username"
            required
          /> 
          <div class="valid-feedback">
            Looks good!
          </div>

        </div>
          <div class="mb-1">
            <label for="email" class="form-label">Enter your email :</label>
            <input
              name="email"
              type="email"
              class="form-control"
              id="email"
              required
            /> 
            <div class="valid-feedback">
              Looks good!
            </div>
            <div id="validationServer03Feedback" class="invalid-feedback">
              Please enter a valid email.
            </div>
  
  
          </div>
            <div class="mb-1">
              <label for="password" class="form-label"> Strong Password :</label>
              <input
                name="password"
                type="password"
                class="form-control"
                id="password"
                required
              /> </div>
              <br>
              <button type="submit" class="btn btn-success col-6 offset-3">SignUp</button>

          </form>
          </div>
          </div>
